configuration {
  font: "CaskaydiaCove Nerd Font Medium 11";

  drun {
    display-name: "";
  }

  run {
    display-name: "";
  }

  window {
    display-name: "";
  }

  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

* {
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;

  bg: #2E3440;
  bg-alt: #3B4252;
  bg-selected: #8FBCBB;
  fg: #ECEFF4;
  /* fg-alt: #EBCB8B; */
  fg-alt: #2E3440;

  background-color: @bg;
  text-color: @fg;
}

window {
  transparency: "real";
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  background-color: @bg-alt;
  children: [prompt, entry];
}

entry {
  background-color: inherit;
  padding: 12px 3px;
}

prompt {
  background-color: inherit;
  padding: 12px;
}

listview {
  lines: 8;
}

element {
  children: [element-icon, element-text];
}

element-icon {
  padding: 10px 10px;
}

element-icon selected {
  padding: 10px 10px;
  background-color: @bg-selected;
}

element-text {
  padding: 10px 0;
}

element-text selected {
  text-color: @fg-alt;
  background-color: @bg-selected;
}
