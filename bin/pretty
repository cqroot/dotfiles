#!/usr/bin/env python3

import argparse


def pretty_title(title: str):
    length = len(title)
    print("╭─%s─╮" % ("─" * length))
    print("│ %s │" % title)
    print("╰─%s─╯" % ("─" * length))


def main():
    parser = argparse.ArgumentParser()
    subparser = parser.add_subparsers(dest="command")

    title_parser = subparser.add_parser("title")
    title_parser.add_argument("title", type=str)

    args = parser.parse_args()

    if args.command == "title":
        pretty_title(args.title)


if __name__ == "__main__":
    main()
